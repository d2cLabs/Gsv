@using Gsv
@using Gsv.Staffing
@{
    Layout = "~/Views/Shared/_CrudLayout.cshtml";
}

@section customScript
{
    <script type="text/javascript">
        crud.dgDefault.name = 'Workers';
        crud.dgDefault.sortName = 'cn';
        crud.dgDefault.columns = [[
            { field: "cn", title: "编号", width: 100, sortable: true },
            { field: "name", title: "名称", width: 100 },
            { field: "password", title: "登录密码", width: 80 },
            { field: "mobile", title: "手机号码", width: 100 },
            { field: "weixinDeviceId", title: "微信设备号", width: 100 }
        ]];
    </script>
}

@*弹窗*@
<div id="dlg" class="easyui-dialog" closed="true" modal="true" buttons="#dlg-buttons" align="center" style="width: 400px; padding: 10px;">
    <form id="fm" class="easyui-form" method="post" novalidate>
        <table class="edit-tbl">
            <input id="id" name="id" type="hidden">
            <tr>
                <th><label for="cn">编号：</label></th>
                <td><input name="cn" class="easyui-textbox" data-options="required:true, validType:'length[1, @Worker.MaxCnLength]'" style="width: 100%"></td>
            </tr>
            <tr>
                <th><Label for="name">姓名:</Label></th>
                <td><input name="name" class="easyui-textbox" data-options="required:true, validType:'length[2, @Worker.MaxNameLength]'" style="width: 100%"></td>
            </tr>
            <tr>
                <th><Label for="password">登录密码:</Label></th>
                <td><input name="password" class="easyui-numberbox" data-options="required:true, validType:'length[2, @Worker.MaxPasswordLength]'" style="width: 100%"></td>
            </tr>
            <tr>
                <th><Label for="mobile">手机号码:</Label></th>
                <td><input name="mobile" class="easyui-numberbox" data-options="validType:'length[@GsvConsts.MobileLength, @GsvConsts.MobileLength]'" style="width: 100%"></td>
            </tr>
            <tr>
                <th><label for="weixinDeviceId">微信设备号：</label></th>
                <td><input name="weixinDeviceId" class="easyui-textbox" data-options="validType:'length[1, @GsvConsts.NormalStringFieldLength]'" style="width: 100%"></td>
           </tr>
        </table>
    </form>
</div>
